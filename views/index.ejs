<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Link Rot - URL Rotator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        html {
            height: 100%;
        }
        /* Background with blurry ambient light */
        body {
            
            background: linear-gradient(135deg, rgba(63, 94, 251, 0.8), rgba(252, 70, 107, 0.8));
            background-size: 200% 200%;
            animation: gradientAnimation 15s ease infinite;
            font-family: 'Arial', sans-serif;
            color: white;
            display: flex;
            flex-direction: column;
            height: 100vh;

        }

        /* Smooth gradient animation */
        @keyframes gradientAnimation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Content container styling */
        .container {
            backdrop-filter: blur(10px);
            background: rgba(0, 0, 0, 0.5);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            flex: 1;
        }

        /* Footer styling */
        footer {
            background: rgba(0, 0, 0, 0.7);
            
        }

        a {
            text-decoration: none;
        }

        /* Fix table URL column size */
        table td a {
            display: block;
            max-width: 500px;
            white-space: normal; 
            word-wrap: break-word;
        }

        /* Medium screens (tablets) */
        @media (max-width: 992px) { /* Bootstrap "md" breakpoint */
            table td a {
                max-width: 150px; /* Slightly smaller for tablets */
            }
        }

        /* Small screens (phones) */
        @media (max-width: 576px) { /* Bootstrap "sm" breakpoint */
            table td a {
                max-width: 100px; /* Smallest size for phones */
            }
        }
    </style>
</head>
<body class="h-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Link Rot</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="about">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    

    <!-- Main Content -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">"Brain Rot" Your URLs</h1>
        <p class="text-center text-white">Quickly convert your URLs into "brainrot" URLs with ease!</p>

        <!-- Form -->
        <form action="/rotUrls" method="post" class="my-4">
            <div class="row g-3 align-items-center">
                <div class="col-md-9">
                    <label for="fullUrl" class="visually-hidden">Url</label>
                    <input required placeholder="Enter a URL to rot" type="url" name="fullUrl" id="fullUrl" class="form-control" aria-label="Full URL">
                </div>
                <div class="col-md-3 text-center text-md-start">
                    <button type="submit" class="btn btn-success w-100">Rot URL</button>
                </div>
            </div>
        </form>

        <!-- Table -->
        <div class="table-responsive mt-5">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Full URL</th>
                        <th>Rot URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% rotUrls.forEach(rotUrl => { %>
                        <tr>
                            <td>
                                <a href="<%= rotUrl.full %>" target="_blank"><%= rotUrl.full %></a>
                            </td>
                            <td>
                                <a href="<%= rotUrl.short %>" target="_blank">https://linkrot.onrender.com/<%= rotUrl.short %></a>
                            </td>
                            <td><%= rotUrl.clicks %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-white text-center py-3 mt-5">
        <small>@omeygunner on instagram</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-yNcp0+xKKMSTsrFI7UfdHQBsjDUbFVVBEspQm/ZBfQmkRmg9Xx0prOlx4WY1bD16" crossorigin="anonymous"></script>
</body>
</html>
